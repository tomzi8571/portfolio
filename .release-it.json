{
  "plugins": {
    "@csmith/release-it-calver-plugin": {
      "format": "YYYY.MM.DD.minor",
      "increment": "calendar"
    }
  },
    "git": {
        "commitMessage": "chore(release): v${version}",
        "tagName": "v${version}",
        "requireCleanWorkingDir": true,
        "requireBranch": "master",
        "push": false,
        "pushRepo": "origin",
        "pushArgs": "--follow-tags"
    },
  "github": {
    "release": true,
    "tokenRef": "PERSONAL_GITHUB_MINIMAL_CLASSIC_PORTFOLIO_TOKEN"
  },
  "npm": {
    "publish": false,
    "version": "${version}"
  },
  "hooks": {
    "before:init": [
      "echo 'Starting rolling release versioning...'"
    ]
  }
}
