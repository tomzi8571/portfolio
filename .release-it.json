{
  "plugins": {
    "@csmith/release-it-calver-plugin": {
      "format": "YYYY.MM.DD.minor",
      "increment": "calendar"
    }
  },
  "github": {
    "tagName": "v${version}",
    "commitMessage": "chore(release): v${version}",
    "token": "${PERSONAL_GITHUB_MINIMAL_PERMISSIONS_PORTFOLIO}"
  },
  "npm": {
    "publish": false,
    "version": "${version}"
  },
  "hooks": {
    "before:init": [
      "echo 'Starting rolling release versioning...'"
    ]
  }
}
