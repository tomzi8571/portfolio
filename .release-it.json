{
  "plugins": {
    "@csmith/release-it-calver-plugin": {
      "format": "yyyy.mm.minor",
      "increment": "calendar.minor"
    }
  },
    "git": {
        "commitMessage": "chore(release): v${version}",
        "tagName": "v${version}",
        "requireCleanWorkingDir": true,
        "requireBranch": "master",
        "push": true,
        "pushRepo": "origin",
        "pushArgs": "--follow-tags"

    },
  "github": {
    "release": true,
    "tokenRef": "PERSONAL_GITHUB_MINIMAL_CLASSIC_PORTFOLIO_TOKEN",
    "releaseName": "v${version}",
    "_draft": false,
    "_prerelease": false,
    "assets": [
      "dist/**/*"
    ],
    "_notes": {
      "config": "release-notes.json"
    }
  },
  "npm": {
    "publish": false,
    "version": "${version}"
  },
  "hooks": {
    "before:init": [
      "echo 'Starting rolling release versioning...'"
    ]
  }
}
